{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "isolatedModules": true,
    "lib": ["ESNext"],
    "sourceMap": true,

    /* Transpilation */
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "vitest.config.ts"]
}
