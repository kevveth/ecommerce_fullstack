{
  "name": "ecommerce_fullstack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:client": "turbo run build --filter=@ecommerce/client",
    "build:server": "turbo run dev --filter=@ecommerce/server",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "dev": "turbo run dev",
    "dev:client": "turbo run dev --filter=@ecommerce/client",
    "dev:server": "turbo run dev --filter=@ecommerce/server",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "3.5.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  }
}
