{
  "name": "ecommerce_fullstack",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:client": "turbo run dev --filter=@ecommerce/client",
    "dev:server": "turbo run dev --filter=@ecommerce/server",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=@ecommerce/client",
    "build:server": "turbo run dev --filter=@ecommerce/server",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "eslint-config-turbo": "2.5.4",
    "prettier": "3.5.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=18"
  }
}
