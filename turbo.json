{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "pnpm-lock.yaml", "package.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^test"],
      "env": ["NODE_ENV", "VITE_API_URL", "DATABASE_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}
