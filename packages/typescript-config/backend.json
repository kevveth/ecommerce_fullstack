{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Backend/Node.js",
  "extends": "./base",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    "declaration": true,
    "declarationMap": true
  }
}
