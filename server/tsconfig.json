{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "lib": ["es2022"],

    /* Transpilation */
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
